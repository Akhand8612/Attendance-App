<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="5dp"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Employee Code : testakash"
                    android:textColor="#4E4E4E"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/attendanceType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_green_background"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:text="Duty"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:textColor="#fff"
                    android:textSize="16dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/punchIn"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:drawableEnd="@drawable/green_circle"
                android:drawablePadding="8dp"
                android:textStyle="bold"
                android:text="Punch In : 2020-09-08 78:12:12:12"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/punchOut"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/red_circle"
                android:drawablePadding="8dp"
                android:text="Punch Out : 2020-09-08 78:12:12:12"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/unitname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="Unit Name :  ICICI Bank Limited"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>